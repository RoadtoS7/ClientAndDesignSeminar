<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginVertical="6dp"
        android:layout_marginLeft="23dp"
        android:src="@drawable/search_img_product1"
        app:layout_constraintCircleRadius="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/product_name"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0"
        />

    <ImageView
        android:id="@+id/cer_mini"
        android:layout_width="47dp"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="11dp"
        android:src="@drawable/search_img_certification1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/product_image"
        app:layout_constraintRight_toLeftOf="@+id/new_mini"
        app:layout_constraintBottom_toTopOf="@+id/product_name"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <ImageView
        android:id="@+id/new_mini"
        android:layout_width="38dp"
        android:layout_height="15dp"
        android:layout_marginLeft="3dp"
        android:src="@drawable/search_img_new1"
        app:layout_constraintTop_toTopOf="@+id/cer_mini"
        app:layout_constraintLeft_toRightOf="@+id/cer_mini"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/cer_mini"/>

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="@font/applesdgothicneosb"
        android:textColor="#333333"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="6dp"
        android:gravity="left"
        android:text="여성 엘칸토 로퍼 250"
        app:layout_constraintTop_toBottomOf="@+id/cer_mini"
        app:layout_constraintLeft_toRightOf="@+id/product_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/price"

        />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:fontFamily="@font/applesdgothicneoeb"
        android:textColor="#333333"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="11dp"
        android:text="45,000원"
        app:layout_constraintTop_toBottomOf="@+id/product_name"
        app:layout_constraintLeft_toRightOf="@+id/product_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"/>

</androidx.constraintlayout.widget.ConstraintLayout>